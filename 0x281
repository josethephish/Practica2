#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[100];

    fd = open("testfile.txt", O_RDWR | O_CREAT, 0644);
    if (fd == -1) {
        perror("Error al abrir el archivo");
        exit(1);
    }

    write(fd, "Hello, File System!\n", 20);
    lseek(fd, 0, SEEK_SET);  // Mover al inicio del archivo
    read(fd, buffer, 20);
    
    printf("Contenido le√≠do: %s", buffer);
    
    close(fd);
    return 0;
}
